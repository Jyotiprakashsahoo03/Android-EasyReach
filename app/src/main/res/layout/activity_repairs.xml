<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".repairs">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/order1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/rc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Home Appliances "
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/rc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Plumbing Repairs"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/rc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:buttonTint="#373936"
                android:text="Home improvement"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/rc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Automative Repairs"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/rc5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="jewelery and Watch repairs"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/rc6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Fitness Equipment Service"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/rc7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Computer repairs"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="click"
        android:text="Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>