<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Food Delivery "
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Grocery Delivery"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:buttonTint="#373936"
                android:text="Package and parcel Delivery"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/cb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Pharmacy Delivery"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/cb5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Flower Delivery"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/cb6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Retail and marchendise"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/cb7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Pet Supplies Delivery"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/cb8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Beauty and wellnes product"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />
            <CheckBox
                android:id="@+id/cb9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@android:drawable/alert_light_frame"
                android:text="Technology and gadget"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:padding="10dp"
                />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="click"
        android:text="Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


